<div class="d-flex justify-content-center">
  <form class="needs-validation col-6" novalidate>
    <h2 class="text-center mb-4">Usuarios !!</h2>
    <div class="mb-3">
      <button type="button" class="btn btn-primary" {{on "click" this.addUser}}>Agregar</button>
      <button type="button" class="btn btn-primary" {{on "click" this.deleteUser}}>Eliminar</button>
      <button type="button" class="btn btn-primary" {{on "click" this.editUser}}>Editar</button>
    </div>

    <div class="mb-3">
      <label for="search" class="form-label">Buscar usuario:</label>
      <input id="search" class="form-control" value={{this.searchQuery}} type="text" {{on "input" this.searchUser}} />
    </div>

    <div class="mb-3">
      <label for="userType" class="form-label">Tipo de usuario:</label>
      <select id="userType" class="form-select" {{on "change" this.updateUserType}}>
        <option value="">Selecciona un tipo de usuario</option>
        <option value="admin">Admin</option>
        <option value="user">User</option>
      </select>
    </div>

    <div class="mb-3">
      <label for="status" class="form-label">Estado:</label>
      <select id="status" class="form-select" {{on "change" this.updateStatus}}>
        <option value="">Selecciona un estado</option>
        <option value="active">Active</option>
        <option value="inactive">Inactive</option>
      </select>
    </div>
  </form>
</div>